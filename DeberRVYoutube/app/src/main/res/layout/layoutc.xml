<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:id="@+id/linear_c"
              android:orientation="vertical"
>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="146dp">
        <ImageView
                android:layout_width="165dp"
                android:layout_height="94dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/img_usuario"
                android:layout_weight="1"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="120dp" android:layout_weight="1">
            <TextView
                    android:text="TextView"
                    android:layout_width="335dp"
                    android:layout_height="35dp" android:id="@+id/txt_usuario"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="52dp" android:id="@+id/txt_comentario"/>
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageButton
                            android:layout_width="39dp"
                            android:layout_height="match_parent" app:srcCompat="@mipmap/like"
                            android:id="@+id/btn_like"/>
                    <ImageButton
                            android:layout_width="39dp"
                            android:layout_height="30dp" app:srcCompat="@mipmap/dislike"
                            android:id="@+id/btn_dislike"/>
                    <ImageView
                            android:layout_width="86dp"
                            android:layout_height="match_parent" app:srcCompat="@mipmap/responder"
                            android:id="@+id/btn_responder"/>
                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
