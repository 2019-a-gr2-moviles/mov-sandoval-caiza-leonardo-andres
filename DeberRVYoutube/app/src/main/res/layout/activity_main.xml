<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/youtube1"
        tools:context=".MainActivity">

    <Button
            android:text="ACCEDER"
            android:layout_width="131dp"
            android:layout_height="51dp"
            android:id="@+id/btn_parcelable"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp" android:layout_marginRight="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.893" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_recycler_view" app:layout_constraintVertical_bias="0.876"/>
    <Button
            android:layout_width="110dp"
            android:layout_height="61dp"
            android:id="@+id/btn_recycler_view"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp" android:drawableBottom="@android:drawable/ic_search_category_default"
            android:background="?attr/actionBarDivider"
            android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="62dp"
            android:inputType="textPersonName"
            android:text="Buscar"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_recycler_view" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>

</android.support.constraint.ConstraintLayout>