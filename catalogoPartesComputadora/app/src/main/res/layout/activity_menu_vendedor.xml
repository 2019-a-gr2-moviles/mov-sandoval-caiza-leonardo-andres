<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".menuVendedor">

    <Button
            android:text="Nuevo"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/buttonNuevo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="122dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="45dp" app:layout_constraintBottom_toTopOf="@+id/buttonModificar"/>
    <Button
            android:text="Modificar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonModificar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="41dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonNuevo" android:layout_marginBottom="49dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonEliminar"/>
    <Button
            android:text="Eliminar"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEliminar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonBuscar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonModificar" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Buscar"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBuscar" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonEliminar" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonSalir"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="Salir"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSalir" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="72dp" app:layout_constraintTop_toBottomOf="@+id/buttonBuscar"
            android:layout_marginBottom="76dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>