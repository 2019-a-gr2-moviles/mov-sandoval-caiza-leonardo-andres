<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CicloVidaActivity">

    <Button
            android:text="Boton Contador"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_contador" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginBottom="212dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.538"/>
    <TextView
            android:text="contador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_contador" app:layout_constraintStart_toStartOf="@+id/btn_contador"
            app:layout_constraintEnd_toEndOf="@+id/btn_contador" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_contador" app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintVertical_bias="0.741"/>
</androidx.constraintlayout.widget.ConstraintLayout>