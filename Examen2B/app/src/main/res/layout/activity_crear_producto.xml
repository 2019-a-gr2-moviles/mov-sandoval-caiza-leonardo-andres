<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CrearProducto">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_uso_med"
            app:layout_constraintTop_toBottomOf="@+id/txt_gra_med"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/txt_gra_med"
            app:layout_constraintEnd_toEndOf="@+id/txt_gra_med" android:hint="Numero de producto"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_comp_med"
            android:hint="Descripcion"
            app:layout_constraintStart_toStartOf="@+id/txt_nom_med"
            app:layout_constraintEnd_toEndOf="@+id/txt_nom_med" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_nom_med"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/fec_cad_med"
            app:layout_constraintTop_toBottomOf="@+id/txt_uso_med"
            android:layout_marginTop="8dp" android:hint="Fecha de Apertura"
            app:layout_constraintEnd_toEndOf="@+id/txt_uso_med"
            app:layout_constraintStart_toStartOf="@+id/txt_uso_med"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_nom_med" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Nombre"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txt_gra_med"
            app:layout_constraintTop_toBottomOf="@+id/txt_comp_med" android:layout_marginTop="8dp"
            android:hint="Precio"
            app:layout_constraintStart_toStartOf="@+id/txt_comp_med"
            app:layout_constraintEnd_toEndOf="@+id/txt_comp_med"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txt_num_pas_med"
            app:layout_constraintTop_toBottomOf="@+id/fec_cad_med"
            android:layout_marginTop="8dp" android:hint="Anios de garantia"
            app:layout_constraintEnd_toEndOf="@+id/fec_cad_med"
            app:layout_constraintStart_toStartOf="@+id/fec_cad_med"/>
    <Button
            android:text="@string/btn_insertar"
            android:layout_width="140dp"
            android:layout_height="53dp"
            android:id="@+id/btn_ins_med"
            app:layout_constraintStart_toStartOf="@+id/txt_latitud"
            app:layout_constraintEnd_toEndOf="@+id/txt_latitud" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_latitud"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_longitud"
            android:hint="@string/longitud" android:text="-78.459725"
            app:layout_constraintEnd_toEndOf="@+id/txt_num_pas_med"
            app:layout_constraintStart_toStartOf="@+id/txt_num_pas_med" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_num_pas_med"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_latitud"
            app:layout_constraintTop_toBottomOf="@+id/txt_longitud" android:layout_marginTop="8dp"
            android:hint="@string/latitud" android:text="-0.097662"
            app:layout_constraintStart_toStartOf="@+id/txt_longitud"
            app:layout_constraintEnd_toEndOf="@+id/txt_longitud"/>
</androidx.constraintlayout.widget.ConstraintLayout>