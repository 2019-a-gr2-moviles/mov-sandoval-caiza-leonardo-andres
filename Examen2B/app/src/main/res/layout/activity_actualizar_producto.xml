<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActualizarProducto">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txt_num_pas_med_act"
            android:hint="Anios de Garantia"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fec_cad_med_act"
            app:layout_constraintStart_toStartOf="@+id/fec_cad_med_act"
            app:layout_constraintEnd_toEndOf="@+id/fec_cad_med_act"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txt_gra_med_act"
            android:hint="Precio" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_comp_med_act"
            app:layout_constraintStart_toStartOf="@+id/txt_comp_med_act"
            app:layout_constraintEnd_toEndOf="@+id/txt_comp_med_act"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/fec_cad_med_act"
            android:hint="Fecha de apertura"
            app:layout_constraintStart_toStartOf="@+id/txt_uso_med_act"
            app:layout_constraintEnd_toEndOf="@+id/txt_uso_med_act" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_uso_med_act"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_uso_med_act"
            android:hint="Numero de producto"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_gra_med_act"
            app:layout_constraintStart_toStartOf="@+id/txt_gra_med_act"
            app:layout_constraintEnd_toEndOf="@+id/txt_gra_med_act"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Descripcion"
            android:id="@+id/txt_comp_med_act"
            app:layout_constraintStart_toStartOf="@+id/txt_nom_med_act"
            app:layout_constraintEnd_toEndOf="@+id/txt_nom_med_act" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_nom_med_act"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_nom_med_act" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Nombre"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/btn_actualizar"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:id="@+id/btn_act_med_conf"
            app:layout_constraintTop_toBottomOf="@+id/txt_lat_act"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="@+id/txt_lat_act"
            app:layout_constraintEnd_toEndOf="@+id/txt_lat_act"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_lon_act"
            android:hint="@string/longitud" android:text="-78.499363"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_num_pas_med_act"
            app:layout_constraintStart_toStartOf="@+id/txt_num_pas_med_act"
            app:layout_constraintEnd_toEndOf="@+id/txt_num_pas_med_act"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_lat_act"
            app:layout_constraintTop_toBottomOf="@+id/txt_lon_act" android:layout_marginTop="8dp"
            android:hint="@string/latitud" android:text="-0.131702"
            app:layout_constraintStart_toStartOf="@+id/txt_lon_act"
            app:layout_constraintEnd_toEndOf="@+id/txt_lon_act"/>
</androidx.constraintlayout.widget.ConstraintLayout>