<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuTienda">

    <Button
            android:text="@string/btn_crear_pac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_crear_tienda"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_menu_tienda"
            app:layout_constraintEnd_toEndOf="@+id/btn_menu_tienda"
            app:layout_constraintStart_toStartOf="@+id/btn_menu_tienda"/>
    <Button
            android:text="@string/btn_ges_pac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_menu_tienda"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="56dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/btn_mapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mapa2"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_crear_tienda"
            app:layout_constraintEnd_toEndOf="@+id/btn_crear_tienda"
            app:layout_constraintStart_toStartOf="@+id/btn_crear_tienda" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>