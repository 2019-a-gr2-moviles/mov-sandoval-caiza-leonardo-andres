<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActualizarTienda">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/fec_nac_pac_act"
            app:layout_constraintEnd_toEndOf="@+id/txt_ape_pac_act"
            app:layout_constraintStart_toStartOf="@+id/txt_ape_pac_act" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_ape_pac_act" android:hint="Fecha de Apertura"/>
    <Switch
            android:layout_width="212dp"
            android:layout_height="30dp"
            android:id="@+id/sw_seg_pac_act" android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="@+id/txt_hij_pac_act"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:text="Matriz"
            app:layout_constraintStart_toStartOf="@+id/txt_hij_pac_act" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_hij_pac_act"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_nom_pac_act"
            tools:layout_editor_absoluteX="127dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent" android:hint="Nombres"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_ape_pac_act"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_nom_pac_act"
            app:layout_constraintStart_toStartOf="@+id/txt_nom_pac_act"
            app:layout_constraintEnd_toEndOf="@+id/txt_nom_pac_act" android:hint="Direccion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txt_hij_pac_act"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/fec_nac_pac_act"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/fec_nac_pac_act" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fec_nac_pac_act" android:hint="RUC"/>
    <Button
            android:text="@string/btn_actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_act_pac_conf"
            app:layout_constraintStart_toStartOf="@+id/sw_seg_pac_act"
            app:layout_constraintEnd_toEndOf="@+id/sw_seg_pac_act" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/sw_seg_pac_act"/>
</androidx.constraintlayout.widget.ConstraintLayout>