<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CrearTienda">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_nom_tienda"
            android:hint="@string/txt_nom_tienda" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_dir_tienda"
            android:hint="@string/txt_dir_tienda" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_nom_tienda"
            app:layout_constraintStart_toStartOf="@+id/txt_nom_tienda" app:layout_constraintEnd_toEndOf="@+id/txt_nom_tienda"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txt_fecha_tienda" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_dir_tienda"
            app:layout_constraintStart_toStartOf="@+id/txt_dir_tienda" app:layout_constraintEnd_toEndOf="@+id/txt_dir_tienda"
            android:hint="@string/txt_fecha_tienda"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txt_ruc_tienda" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_fecha_tienda" app:layout_constraintStart_toStartOf="@+id/txt_fecha_tienda"
            app:layout_constraintEnd_toEndOf="@+id/txt_fecha_tienda" app:layout_constraintHorizontal_bias="0.0"
            android:hint="@string/txt_ruc_tienda"/>
    <Switch
            android:text="@string/sw_matriz_tienda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/sw_matriz_tienda" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_ruc_tienda" app:layout_constraintStart_toStartOf="@+id/txt_ruc_tienda"
            app:layout_constraintEnd_toEndOf="@+id/txt_ruc_tienda"
    />
    <Button
            android:text="@string/btn_insertar_tienda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_insertar_tienda" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sw_matriz_tienda"
            app:layout_constraintStart_toStartOf="@+id/sw_matriz_tienda"
            app:layout_constraintEnd_toEndOf="@+id/sw_matriz_tienda"/>
</android.support.constraint.ConstraintLayout>