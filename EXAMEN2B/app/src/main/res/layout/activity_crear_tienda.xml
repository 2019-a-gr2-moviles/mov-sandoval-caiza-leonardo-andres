<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CrearTienda">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dp_fec_nac_pac"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/txt_ape_pac"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_ape_pac" android:hint="Fecha de Apertura"
            app:layout_constraintStart_toStartOf="@+id/txt_ape_pac" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_nombres_tienda" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:hint="Nombres"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_ape_pac"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_nombres_tienda"
            android:hint="Direccion"
            app:layout_constraintEnd_toEndOf="@+id/txt_nombres_tienda"
            app:layout_constraintStart_toStartOf="@+id/txt_nombres_tienda"/>
    <Button
            android:text="@string/btn_insertar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_ins_pac"
            app:layout_constraintStart_toStartOf="@+id/sw_seg_pac"
            app:layout_constraintEnd_toEndOf="@+id/sw_seg_pac" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/sw_seg_pac"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txt_hij_pac"
            android:hint="RUC"
            app:layout_constraintEnd_toEndOf="@+id/dp_fec_nac_pac"
            app:layout_constraintStart_toStartOf="@+id/dp_fec_nac_pac" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dp_fec_nac_pac"/>
    <Switch
            android:text="Matriz"
            android:layout_width="211dp"
            android:layout_height="16dp"
            android:id="@+id/sw_seg_pac"
            android:checked="false"
            app:layout_constraintStart_toStartOf="@+id/txt_hij_pac"
            app:layout_constraintEnd_toEndOf="@+id/txt_hij_pac" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_hij_pac"/>
</androidx.constraintlayout.widget.ConstraintLayout>